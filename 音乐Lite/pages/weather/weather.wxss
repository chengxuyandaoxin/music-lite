.content{
  height: 100%;
  width:100%;
  display:flex;
  flex-direction:column;
  font-family: 微软雅黑, 宋体;
  box-sizing:border-box;
  padding:20rpx 10rpx;
  color: #252525;
  font-size:16px;
}

/*当天天气信息*/
.info{ 
  width:100%;
  height:160px;
}

/*城市名称*/
.city{
  margin-top: 5px;
  font-size: 20px;
  margin: 20rpx;
  color: #ff2d55;
  text-align: center;
}

/*当天温度*/
.temp{
  font-size: 120rpx;
  line-height: 130rpx;
  text-align: center;
  padding-top:20rpx;
  color: #ff2d55;

}

/*感冒描述*/
.weather{
  font-size: 15px;
  line-height: 22px;
  margin: 10px 0;
  padding: 0 10px;
  text-align: center;
}


/*最近五天天气信息*/
.forecast{
  width: 100%;
  display:flex;
  margin-top:80rpx;
  align-self:flex-end;
}

/*每天一天的天气信息*/
.next-day{
  width:20%;
  height:450rpx;
  text-align:center;
  line-height:30px;
  font-size:14px;
  margin: 0 3rpx;
  border:1px solid #043567;
  border-radius:10rpx;
}

/*日期*/
.date{
  margin-bottom:20rpx;
  border-bottom:1px solid #043567;
  color:#F29F39;
}

/*搜索区域*/
.search-area{
  margin-top:50rpx;
	display:flex;
	padding: 1rem 0.5rem;
}

/*搜索区域的输入框*/
.search-area input{
	 width:70%;
    height: 38px;
    line-height: 38px;
    border: 1px solid #ccc;
    box-shadow: inset 0 0 10px #bfbfbf;
    color: #000;
    background-color:#f4f4f4;
    border-radius: 5px;
}

/*搜索区的按钮*/
.search-area button{
   width: 30%;
    height: 40px;
    line-height: 40px;
    margin-left: 5px;
    background: #ff2d55;
    font-size: 18px;
}
.mine{
  font-family: 微软雅黑, 宋体;
  height: 40px;
  font-size: 30px;
  margin-left: 6%;
  font-weight: 520;
}
.mine-a{
    margin-top: 2px;
    margin-left: 5%;
    width: 90%;
    border-bottom: 1px solid #bfbfbf;
}
