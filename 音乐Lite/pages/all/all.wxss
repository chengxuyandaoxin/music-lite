/**index.wxss**/
.rank-list {
  width: 100%;
  }


/*每一个分类*/
.rank-item {
  width: 88%;
  text-align: left;
  height: 2.9rem;
  line-height: 2.9rem;
  border-bottom: 0.6px solid #dfdfdf;
  position:relative;
  margin-left: 6%;
}

/*分类文本*/
.rank-item .text {
  margin-left: 10%;
  padding-left: 0.5rem;
  font-size: 20px;
  color:#ff2d55;
  position: absolute;
  width: 87.5%;
  height: 100%;
  top: 0.02px;
}

/*分类名右侧的箭头图标*/
.rank-item .arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #bfbfbf;
  border-right: 2px solid #bfbfbf;
  position: absolute;
  right: 15px;
  transform: rotate(45deg);
  top: 18px;
}

