<!--pages/play/play.wxml-->
<view class="playing container">
<view class='mine'><text>播放器</text>
<text class='mine-c'bindtap="bind">音乐库</text>
</view>
<view class='mine-a'></view>
    <view class="thumbnail">
        <image src="{{song.albumpic_big}}"></image>
        
    </view>
    <view class="detail1">
    <view class="detail">
        <view class="title">{{song.songname}}</view>
        <view class="author">{{song.singername}}</view>
        <view class="action">
            <view class="act-toggle" bindtap="playToggle">
                <image  src="/images/{{isPlaying ? 'pause' : 'play'}}.png" />
            </view>
            </view>
        </view>
    </view>
</view>
