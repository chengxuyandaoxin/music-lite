/* pages/search-b/search-b.wxss */
@import "/wxSearch/wxSearch.wxss";
/* pages/search/search.wxss */
.search-area{
    width: 90%;
    padding: 1rem 0.5rem;
    margin-left: 2.5%;
}
.search-area button{
    background: #ff2d55;
    margin-left: 74%;
    border-radius: 6px;
}
.search-area input{
    background: #f4f4f4;
    border-radius: 6px;
    height: 2.5rem;
    line-height: 2rem;
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
    font-size: 0.9rem;
}

.boards image{
  margin-top: 1px;
  width: 55px;
  height: 55px;
  padding-left: 12px;
}
.mine{
  font-size: 34px;
  margin-left: 5%;
  font-weight: 500;
}
.mine-a{
    margin-top: 2px;
    margin-left: 5%;
    width: 90%;
    border-bottom: 1px solid #bfbfbf;
}
.board image{
    width: 92%;
    height: 230px;
    border-radius: 8px 8px 8px 8px;
    margin-left: 4%;
    margin-right: 4%;
    margin-top: 1%;
    margin-bottom: 1%;
}
.boards image{
  margin-top: 4px;
  width: 45px;
  height: 45px;
  padding-left: 14px;
}

.null-space{
    width: 100%;
    height: 250px;
}

/*音乐列表*/
.songlist {
  width: 100%;
  overflow-x: hidden;
  overflow-y: visible;
  font-size: 0.8rem;
}

/*每一个音乐项目*/
.songitem{
  height: 3.2rem;
  line-height: 1.5rem;
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 10rpx;
  width: 100%;
}

/*选择的音乐项目*/
.songitem:active {
  background: #eee;
}

/*左侧的播放图标*/
.song-play {
  width: 10%;
  text-align: center;
  vertical-align: middle;
}
.song-play image {
  line-height: 2rem;
  width: 50px;
  height: 50px;
  padding-top: 13px;
}
/*音乐项目的细节内容*/
.song-detail {
  white-space: nowrap;
  width: 90%;
}
/*音乐标题*/
.song-title {
  width: 80%;
  margin-top: 2px;
  font-size: 1rem;
  margin-left: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/*副标题*/
.song-subtitle {
  width: 80%;
  color: #555;
  margin-left: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}



.header {
  display: -webkit-flex;
  padding: 20rpx;
  background: #fff;
}

/*放大镜图标*/

.header .icon {
  width: 42rpx;
  height: 42rpx;
  vertical-align: top;
  float: left;
  margin: 1rpx 5rpx 0 0;
}

/*放大镜 文本框*/

.header .search {
  margin-left: 20rpx;
  color: #000;
  font-size: 32rpx;
  line-height: 40rpx;
  padding: 18rpx;
  border-radius: 10rpx;
  background: #eee;
}

/*搜索按钮*/

.header button {
  margin-left: 12rpx;
  font-size: 31rpx;
  color: #ff2d55;
  border-color: #ff2d55;
}

/*文本框*/

.header input {
  width: 58vw;
  height: 30rpx;
  min-height: 40rpx;
}




